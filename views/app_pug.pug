    script.
      // Basic tab switching functionality
      document.addEventListener('DOMContentLoaded', () => {
        const tabs = document.querySelectorAll('.tab');
        const documentTypes = document.querySelectorAll('.document-type');
        
        tabs.forEach(tab => {
          tab.addEventListener('click', () => {
            tabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');
          });
        });
        
        documentTypes.forEach(type => {
          type.addEventListener('click', () => {
            documentTypes.forEach(t => t.classList.remove('selected'));
            type.classList.add('selected');
          });
        });
        
        // Demo generation button
        const generateButton = document.querySelector('.generate-button');
        const promptInput = document.getElementById('prompt-input');
        const outputEl = document.querySelector('.tab-content pre');
        
        generateButton.addEventListener('click', () => {
          if (!promptInput.value.trim()) {
            alert('Please enter a prompt first');
            return;
          }
          
          generateButton.classList.add('loading');
          generateButton.disabled = true;
          
          // Simulate API call
          setTimeout(() => {
            const selectedType = document.querySelector('.document-type.selected').textContent.trim();
            outputEl.textContent = generateSampleLatex(selectedType, promptInput.value);
            
            generateButton.classList.remove('loading');
            generateButton.disabled = false;
          }, 1500);
        });
      });
      
      // Generate sample LaTeX based on document type and prompt
      function generateSampleLatex(type, prompt) {
        let template = '';
        
        switch(type) {
          case 'Slide':
            template = `\\documentclass{beamer}
\\usepackage{amsmath}
\\\usepackage{graphicx}

\\title{${prompt.substring(0, 30)}...}
\\author{AI LaTeX Generator}
\\date{\\today}

\\begin{document}

\\begin{frame}
\\titlepage
\\end{frame}

\\begin{frame}{Introduction}
\\begin{itemize}
  \\item First point about ${prompt.substring(0, 20)}
  \\item Second important concept
  \\item Third key idea
\\end{itemize}
\\end{frame}

\\end{document}`;
            break;
            
          case 'Report':
            template = `\\documentclass{report}
\\usepackage{amsmath}
\\\usepackage{graphicx}
\\usepackage{hyperref}

\\title{${prompt.substring(0, 30)}...}
\\author{AI LaTeX Generator}
\\date{\\today}

\\begin{document}

\\maketitle
\\tableofcontents

\\chapter{Introduction}
This report explores ${prompt}.

\\chapter{Methodology}
The approach taken in this analysis...

\\chapter{Results}
The findings of our investigation show...

\\chapter{Conclusion}
In conclusion, we have demonstrated...

\\end{document}`;
            break;
            
          default:
            template = `\\documentclass{article}
\\usepackage{amsmath}
\\\usepackage{graphicx}

\\title{${prompt.substring(0, 30)}...}
\\author{AI LaTeX Generator}
\\date{\\today}

\\begin{document}
\\maketitle

\\begin{abstract}
This paper examines ${prompt}.
\\end{abstract}

\\section{Introduction}
${prompt}

\\section{Background}
Important concepts related to this topic include...

\\section{Methodology}
Our approach to analyzing this problem...

\\begin{equation}
E = mc^2
\\end{equation}

\\section{Results}
The findings of our analysis indicate...

\\section{Conclusion}
In conclusion, we have shown...

\\end{document}`;
        }
        
        return template;
    